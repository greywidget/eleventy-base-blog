<div class="row mb-3">
{% for post in postslist | reverse %}
<div class="col-6 col-lg-4 col-xxl-3 p-1">
  <div class="card">
    <div class="card-body">
      {# <div class="card-header px-0"><a href="{{ post.url | url }}" class="cardlink">{{post.data.title}}</a></div> #}
      <h2 class="card-subtitle mb-2 text-success"><time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time></h2>
      <h3 class="card-title"><a href="{{ post.url | url }}" class="cardlink">{{post.data.title}}</a></h3>
      <p class="card-text text-dark">{{post.data.description}}</p>
            {# <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}"> #}
              {# <a href="{{ post.url | url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a> #}
              {# <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time> #}
              {% set firstTime = true %}
              {% for tag in post.data.tags %}
                {%- if collections.tagList.indexOf(tag) != -1 -%}
                {% set tagUrl %}/tags/{{ tag }}/{% endset %}
                {% if not firstTime %}
                |
                {% else %}
                {% set firstTime = false %}
                {% endif %}
                <a class="card-link mx-0" href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
                {%- endif -%}
              {% endfor %}
    </div>
  </div>
</div>
{% endfor %}
</div>